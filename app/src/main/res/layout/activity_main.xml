<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:background="@color/darkGray"
        android:inputType="textPersonName"
        android:textSize="40pt"
        android:gravity="right|center"
        android:layout_marginBottom="1pt"
        android:text="0" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonAC"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="2pt"
                android:background="@color/darkGray"></Button>

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/darkGray"></Button>

            <Button
                android:id="@+id/buttonPercentage"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="2pt"
                android:background="@color/darkGray"></Button>

            <Button
                android:id="@+id/buttonDevide"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/orange"
                android:onClick="operatorEvent"
                android:text="/"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonSeven"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonEight"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonNine"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="*"
                android:onClick="operatorEvent"
                android:background="@color/orange"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonFour"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonFive"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonSix"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:onClick="operatorEvent"
                android:background="@color/orange"
                android:text="-"></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/buttonOne"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonTwo"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonThree"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="2pt"
                android:background="@color/gray"></Button>

            <Button
                android:id="@+id/buttonPlus"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:text="+"
                android:onClick="operatorEvent"
                android:background="@color/orange"></Button>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonZero"
            android:layout_weight="2"
            android:layout_width="62pt"
            android:layout_height="30pt"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="2pt"
            android:background="@color/gray"></Button>

        <Button
            android:id="@+id/buttonDot"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="."
            android:onClick="numberEvent"
            android:layout_marginRight="2pt"
            android:background="@color/gray"></Button>

        <Button
            android:id="@+id/buttonEqual"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:layout_height="30pt"
            android:text="="
            android:onClick="equalEvent"
            android:background="@color/orange"></Button>
    </LinearLayout>



</LinearLayout>